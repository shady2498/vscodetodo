{
  "name": "todo-list",
  "displayName": "todo list",
  "description": "todo list for vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todolist-sidebar-view",
          "title": "ToDo List",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "todolist-sidebar-view": [
        {
          "type": "webview",
          "id": "todolist-sidebar",
          "name": "ToDo List",
          "icon": "media/icon.svg",
          "contextualTitle": "ToDo"
        }
      ]
    },
    "commands": [
      {
        "command": "todo-list.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "todo-list.webviewPanel",
        "title": "WebView Panel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch --config webpack.config.js\" ",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "rollup": "^3.25.3",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-typescript2": "^0.35.0",
    "ts-loader": "^9.4.2",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
